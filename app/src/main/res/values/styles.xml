<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
    </style>

    <!-- MyTheme substijlen -->
    <style name="AppTheme.EmphasisEditor">
        <item name="android:layout_width">@dimen/emphasis_editor_width</item>
        <item name="android:layout_height">@dimen/emphasis_editor_height</item>
        <item name="android:layout_marginLeft">@dimen/emphasis_editor_marginleft</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/hw</item>
        <item name="android:src">@drawable/levellist_emphasis</item>
    </style>

    <style name="AppTheme.EmphasisPlayer">
        <item name="android:layout_width">@dimen/emphasis_editor_width</item>
        <item name="android:layout_height">@dimen/emphasis_editor_height</item>
        <item name="android:layout_marginLeft">@dimen/emphasis_editor_marginleft</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/hw</item>
    </style>

    <style name="AppTheme.EmphasisList">
        <item name="android:layout_width">@dimen/emphasis_list_width</item>
        <item name="android:layout_height">@dimen/emphasis_list_height</item>
        <item name="android:layout_marginLeft">@dimen/emphasis_list_marginleft</item>
        <item name="android:contentDescription">@string/hw</item>
        <item name="android:src">@drawable/levellist_emphasis_list</item>
    </style>

    <style name="AppTheme.TempoButton">
        <item name="android:layout_width">@dimen/incdec_width</item>
        <item name="android:layout_height">@dimen/incdec_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_timescale</item>
    </style>

    <style name="AppTheme.ListviewButton">
        <item name="android:layout_width">@dimen/listitem_button_width</item>
        <item name="android:layout_height">@dimen/listitem_button_height</item>
        <item name="android:layout_marginLeft">@dimen/listitem_button_marginleft</item>
        <item name="android:background">@color/color_listitem_button_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/textsize_timescale</item>
    </style>


</resources>
