<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_track_order_alles"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_track_order_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_listview"
        android:text="@string/label_order"
        android:visibility="gone"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/ll_track_order_emphasis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_track_order_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@mipmap/ic_action_edit"/>

        <LinearLayout
            android:id="@+id/ll_track_order_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_list_order_emphasis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="2dp">

                <ImageView
                    android:id="@+id/iv_list_order_emphasis0"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis1"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis2"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis3"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis4"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis5"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis6"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis7"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis8"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis9"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis10"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis11"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis12"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis13"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis14"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis15"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis16"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis17"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis18"
                    style="@style/AppTheme.EmphasisList"/>

                <ImageView
                    android:id="@+id/iv_list_order_emphasis19"
                    style="@style/AppTheme.EmphasisList"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_track_order_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blabla"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>